@{
    ViewBag.Title = "Promocje";
}
<section class="promotion-wrapper">
    <div class="container">
        <div class="promotion__header">
            Kup książki z obniżką nawet o 50%
        </div>
        @for (int i = 0; i < 10; i=i+3)
        {
            <div class="promotion__info row">
                @for (int j = i; j < i+3; j++)
                {
                    <div class="promotion__info-block col-md-4">
                        <div class="promotion__info-block-img">
                            <img src="~/img/slider1/book1.svg" alt="">
                        </div>
                        <div class="promotion__info-block-header">
                            Autor. Nazwa Książki @j
                        </div>
                        <div class="promotion__info-block-price">
                            <div class="promotion__info-block-price-discount row justify-content-end">
                                <div class="promotion__info-block-price-discount-before col-4">59,99</div>
                                <div class="promotion__info-block-price-discount-value col-4">-38%</div>
                            </div>
                            <div class="promotion__info-block-price-actually">36,99 zł</div>
                        </div>
                        <button class="promotion__info-block-button">Do koszyka <i class="fas fa-cart-arrow-down"></i></button>
                    </div>
                }

            </div>
        }
        
</section>