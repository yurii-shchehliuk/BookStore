@model Domain.Entities.Book

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail ">
        <img class="bookSummary__img" src="@Model.Image" alt="" asp-controller="Home" asp-action="Details" asp-route-bookId="@Model.BookId"/>
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Home" asp-action="Details" asp-route-bookId="@Model.BookId">@Model.Title</a>
            </h3>
            
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookId="@Model.BookId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>