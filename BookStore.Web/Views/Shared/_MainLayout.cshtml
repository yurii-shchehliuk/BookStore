<body>
    <header class="header">
        <div class="header-up">
            <div class="row">
                <div class="header__logo col-md-3 ">
                    <a asp-controller="Home" asp-action="Index">
                        <img class="header__logo__img" src="~/img/logo.svg" alt="LOGO">
                    </a>
                </div>
                <div class="header__search col-md-7">
                    <form class="header__form active-pink-3 active-pink-4 mb-4" asp-controller="Home" asp-action="Search" method="get">

                        <input class="form-control header__search__input" id="hInput" type="text" placeholder="Wyszukaj..." aria-label="Search" name="searchString" value="@ViewData["searchString"]">
                        <button class="header__form__button" type="submit">
                            <img id="loupe" src="~/img/Component 17 – 1.svg">
                        </button>
                    </form>
                    
                </div>

                <div class="header__btn col-md-2">

                    @await Html.PartialAsync("_LoginPartial")

                    <form class="header__form-cart" asp-controller="ShoppingCart" asp-action="Index" target="_blank">
                        <button class="header__form-cart">
                            <div>
                                <img src="~/img/koszyk2.svg" alt="cart">
                               
                            </div>
                        </button>
                        <div class="header__form-cart-increment">
                            @await Component.InvokeAsync("ShoppingCartSummary")
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </header>
    <div class="header-down">
        <nav class="header__nav">
            <ul class="header__nav__list container">
                <li class="header__nav__list__item">
                    <a asp-controller="Home" asp-action="Index"><i class="fas fa-bars"></i> Książki</a>
                </li>
                <li class="header__nav__list__item"><a href="#nowosciScroll">Nowe</a></li>
                <li class="header__nav__list__item"><a asp-controller="Home" asp-action="Promotions">Promocje</a></li>
                <li class="header__nav__list__item"><a asp-controller="Authors" asp-action="Index">Autory</a></li>
                <li class="header__nav__list__item"><a href="Rating">Ranking</a></li>
                @await Component.InvokeAsync("GenresMenu")
                <li class="header__nav__list__item"><a asp-controller="About" asp-action="Index">About</a></li>


            </ul>
        </nav>
    </div>

